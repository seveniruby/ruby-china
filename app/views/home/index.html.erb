<%= raw SiteConfig.index_html %>

<div class="home_suggest_topics box box_gray">
  <h2>社区精华贴</h2>
  <div class="topics">
    <%= render partial: "topics/topic", collection: @excellent_topics %>
  </div>
  <div class="more">
    <%= link_to "查看更多精华贴...", excellent_topics_path %>
    <% if not mobile? %>
      <%= link_to(raw("<span class='icon icons_rss'></span>"), feedgood_topics_url, :title => t("topics.subscribe_good_with_rss", :name => Setting.app_name), :class => "feed") %>
    <% end %>
  </div>
</div>
<% if !mobile? %>
  <%= render_cell :topics, :index_sections %>
  <%= render_cell :topics, :index_locations %>
<% end %>